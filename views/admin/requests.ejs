<!DOCTYPE html>
<html>
<head>
    <title>Access Requests - Admin</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        .container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .nav-tabs {
            margin-bottom: 20px;
            border-bottom: 1px solid #ddd;
        }
        .nav-tabs a {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            color: #333;
            margin-right: 5px;
        }
        .nav-tabs a.active {
            border: 1px solid #ddd;
            border-bottom: none;
            background: #fff;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f5f5f5;
        }
        .btn {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            color: white;
            margin-right: 5px;
        }
        .btn-approve {
            background-color: #28a745;
        }
        .btn-reject {
            background-color: #dc3545;
        }
        .logout-btn {
            float: right;
            padding: 10px 20px;
            background-color: #dc3545;
            color: white;
            text-decoration: none;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/logout" class="logout-btn">Logout</a>
        <h1>Admin Dashboard</h1>
        
        <div class="nav-tabs">
            <a href="/admin/dashboard">Login Logs</a>
            <a href="/admin/requests" class="active">Access Requests</a>
        </div>

        <h2>Pending Access Requests</h2>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Request Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% requests.forEach(function(request) { %>
                    <tr>
                        <td><%= request.name %></td>
                        <td><%= request.email %></td>
                        <td><%= new Date(request.created_at).toLocaleString() %></td>
                        <td>
                            <form style="display: inline;" action="/admin/approve/<%= request.id %>" method="POST">
                                <button type="submit" class="btn btn-approve">Approve</button>
                            </form>
                            <form style="display: inline;" action="/admin/reject/<%= request.id %>" method="POST">
                                <button type="submit" class="btn btn-reject">Reject</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html> 